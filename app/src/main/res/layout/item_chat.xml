<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tvCreateAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_chat"
            app:layout_constraintStart_toEndOf="@id/tvUsername"
            app:layout_constraintTop_toTopOf="@id/tvUsername"
            app:layout_constraintBottom_toBottomOf="@id/tvUsername"
            android:gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:textSize="13sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/titleDiscussion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ini judul"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvUsername"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ini preview diskusi"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/titleDiscussion"
            app:layout_constraintStart_toStartOf="@id/titleDiscussion"
            android:layout_marginTop="9dp"/>

        <ImageView
            android:id="@+id/replyVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_chat_24"
            app:layout_constraintTop_toBottomOf="@id/tvPreview"
            app:layout_constraintStart_toStartOf="@id/tvPreview"
            android:layout_marginTop="42dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Pembahasan"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/replyVector"
            app:layout_constraintStart_toEndOf="@id/replyVector"
            app:layout_constraintBottom_toBottomOf="@id/replyVector"
            android:gravity="center_vertical"
            android:layout_marginStart="9dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>